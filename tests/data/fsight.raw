$(function(){
  $('#archive-search').on('click',function(){
    startday = "";
    endday = "";
    checkstartyear = Number($("select[name='startyear']").val());
    checkendyear = Number($("select[name='endyear']").val());
    if (checkstartyear > checkendyear){
      alert('検索終了日が検索開始日以前になっています！');
      return;
    }else if(checkstartyear == checkendyear){
      checkstartmonth = Number($("select[name='startmonth']").val());
      checkendmonth = Number($("select[name='endmonth']").val());
      if (checkstartmonth > checkendmonth ){
        alert('検索終了日が検索開始日以前になっています！');
        return;
      }
    }
    startday = $("select[name='startyear']").val() + $("select[name='startmonth']").val() + "01";
    tday = "";
    numendmonth = Number($("select[name='endmonth']").val());
    switch(numendmonth) {
      case 1:
      case 3:
      case 5:
      case 7:
      case 8:
      case 10:
      case 12:
        tday = '31';
        break;
      case 4:
      case 6:
      case 9:
      case 11:
        tday = '30';
        break;
      case 2:
        numyear = Number($("select[name='endyear']").val());
        checkresult = checkLeap(numyear);
        if (checkresult == true){
          tday = "29";
        }else{
          tday = "28";
        }
        break;
    }
    endday = $("select[name='endyear']").val() + $("select[name='endmonth']").val() + tday;
    location.href="/search?publish_at_from=" + startday + "&publish_at_to=" + endday + "235959&_catecode[]=info&_catecode[]=update";
    });
    //うるう年（閏年）の判定
    function checkLeap(year) {
      return (year % 4 == 0 && year % 100 != 0) || year % 400 == 0;
    }
});
</script>

